@model List<ImplementationToDoTasks.Models.CreateAccount.InsuranceCompanyModel>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2>Insurance Companies</h2>
        </div>
        <div class="card-body">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <form asp-action="CreateAccounts" method="post">
                <div class="text-end mb-3">
                    <button type="submit" class="btn btn-success">Create Insurance Company Accounts</button>
                </div>
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Sno</th>
                            <th>Company Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model)
                        {
                            <tr>
                                <td>@company.SNo</td>
                                <td>@company.CompanyName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>
