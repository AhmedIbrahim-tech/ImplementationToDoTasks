<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Implementation ToDo Tasks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ImplementationToDoTasks.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" width="50" height="30" class="d-inline-block align-top" id="navbarLogo">
                    Library
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Encryption" asp-action="Index">Encryption</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownMine" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Tools (Mine)
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMine">
                                <li><a class="dropdown-item" asp-area="" asp-controller="ReplaceFileRename" asp-action="Index">Replace File Rename Dir</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdownOasis" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Oasis
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownOasis">
                                <li><a class="dropdown-item" asp-area="" asp-controller="NameReplacer" asp-action="Index">Replacer Name in IBS (All Tables)</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="FindReplacerAndValueReplacer" asp-action="Index">Fetch And Replacer Cloum in IBS (All Tables)</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CreateAccountClient" asp-action="Index">Create Account Client</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CreateAccountInsuranceCompany" asp-action="Index">Create Insurance Company</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2024 - Encryption - By <a asp-area="" asp-controller="Home" asp-action="Index">Ahmed Eprahim</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#navbarLogo').on('error', function () {
                $(this).attr('src', '~/favicon.ico');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
