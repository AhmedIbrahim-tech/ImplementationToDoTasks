@model ImplementationToDoTasks.Models.EncryptionModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Encryption / Decryption</h2>

    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <div class="mb-3">
                <label for="inputText" class="form-label">Input Text:</label>
                <input type="text" id="inputText" name="InputText" class="form-control" placeholder="Enter text to encrypt or decrypt" />
            </div>

            <div class="mb-3 text-center">
                <button id="encryptButton" class="btn btn-success mx-2">Encrypt</button>
                <button id="decryptButton" class="btn btn-primary mx-2">Decrypt</button>
            </div>

            <div class="mb-3">
                <label for="resultText" class="form-label">Result:</label>
                <input type="text" id="resultText" name="Result" class="form-control" readonly />
            </div>

            <div id="message" class="alert alert-info d-none"></div>
        </div>
    </div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        function handleResponse(response) {
            if (response.success) {
                $('#resultText').val(response.result).hide().fadeIn();
                $('#message').text(response.message).removeClass('d-none alert-danger').addClass('alert-success').hide().slideDown();
            } else {
                $('#message').text(response.message).removeClass('d-none alert-success').addClass('alert-danger').hide().slideDown();
            }
        }

        $('#encryptButton').click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Encrypt", "Encryption")',
                data: { InputText: $('#inputText').val(), Operation: "Encrypt" },
                success: handleResponse
            });
        });

        $('#decryptButton').click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Decrypt", "Encryption")',
                data: { InputText: $('#inputText').val(), Operation: "Decrypt" },
                success: handleResponse
            });
        });
    });
</script>
